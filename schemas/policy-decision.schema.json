{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/policy-decision.schema.json",
  "title": "Policy decision (simulation reference)",
  "type": "object",
  "additionalProperties": false,
  "required": ["decision_id", "timestamp", "request_id", "decision", "rule_path", "requirements"],
  "properties": {
    "decision_id": { "type": "string", "minLength": 6 },
    "timestamp": { "type": "string", "format": "date-time" },
    "request_id": { "type": "string", "minLength": 6 },
    "decision": { "type": "string", "enum": ["allow", "deny", "escalate", "simulate"] },
    "rule_path": { "type": "string", "minLength": 1 },
    "requirements": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "notes": { "type": "string" }
  }
}
